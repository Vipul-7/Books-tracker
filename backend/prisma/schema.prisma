// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  currentRead Book[] @relation("currentReadBooks")
  favorite Book[] @relation("favoriteBooks")
  haveRead  Book[] @relation("haveReadBooks")
  toRead    Book[] @relation("toReadBooks")
  feedback  Feedback[]
}

model Book {
  id          Int      @id @default(autoincrement())
  bookId      String   @unique
  image       String
  title       String
  author      String[]
  description String
  categories  String[]
  language    String
  pages       Int
  previewLink String
  readPages   Int
  textSnippet String
  createdAt   DateTime @default(now())
  currentRead User[]   @relation("currentReadBooks")
  favorite    User[]   @relation("favoriteBooks")
  haveRead    User[]   @relation("haveReadBooks")
  toRead      User[]   @relation("toReadBooks")
}

model Feedback {
  id        Int      @id @default(autoincrement())
  userId    Int
  message   String
  rating    Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}